pipeline {
    agent {
        node {
            label 'maven'
        }
    }
    environment {
        PATH = "/opt/apache-maven-3.9.4/bin:$PATH"
        MAVEN_OPTS = "-Xmx4096m"
    }
    stages {
        stage('Clone-code') {
            steps {
                git branch: 'main', url: 'https://github.com/automationsaan/tweet-trend-new.git'
            }
        }
        stage('Build') {
            steps {
                sh 'mvn clean deploy -X'
            }
        }
    }
}


